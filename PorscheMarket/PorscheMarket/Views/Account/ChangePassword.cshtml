@model PorscheMarket.Domain.ViewModels.Account.ChangePasswordViewModel
@{ 
    ViewBag.Title = "Изменения пароля";
}
<div >
    <div class="card-header" >Изменение Пароля</div>
    <div class="card-body" style="background-color:lightgrey;">
        <form autocomplete="on" method="post" asp-action="ChangePassword" asp-controller="Account">
            <div asp-validation-summary="All" style="font-size:23px;"></div>
            <div class="form-group">
                <input asp-for="Name" placeholder="Логин" class="form-control textbox-dg font-weight-bold " type="text">
                <input asp-for="OldPassword" placeholder="Старый Пароль" class="form-control textbox-dg font-weight-bold " type="password" />
            </div>
            <div class="form-group">
                <input asp-for="NewPassword" placeholder="Новый Пароль" class="form-control textbox-dg font-weight-bold " type="password" />
                <input asp-for="ConfirmNewPassword" placeholder="Подтвердите Пароль" class="form-control textbox-dg font-weight-bold" type="password" />
            </div>
            <div class="d-grid gap-2 d-md-block float-right">
                <button class="btn button__send">Изменить</button>
            </div>
        </form>
    </div>
</div>